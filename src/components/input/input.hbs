<input 
{{#if className}}
    class="{{ className }}" 
{{/if}}
{{#if type}}
    type="{{ type }}" 
{{/if}}
{{#if name}}
    name="{{ name }}" 
{{/if}}
{{#if placeholder}}
    placeholder="{{ placeholder }}"
{{/if}}
{{#if value}} 
    value="{{ value }}"
{{/if}}
{{#if accept}} 
    accept="{{ accept }}"
{{/if}}
>
